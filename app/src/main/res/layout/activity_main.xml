<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruralis.linkupwomen.linkupwomen.MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="92dp"
        android:layout_height="498dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_alerts"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/alert_icon"
                android:layout_marginBottom="16dp"/>
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/profile_icon"
                android:layout_below="@+id/btn_alerts"/>
            <Button
                android:id="@+id/btn_groups"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/group_icon"
                android:layout_below="@+id/btn_profile"/>
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/settings_icon"
                android:layout_below="@+id/btn_groups"/>

        </RelativeLayout>




    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
